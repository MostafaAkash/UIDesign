<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    app:cardBackgroundColor="#DD99FF"
    app:cardCornerRadius="5dp"
    app:cardMaxElevation="2dp">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/imageViewId_demo_second"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:paddingLeft="3dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="S"></TextView>

            <TextView
                android:id="@+id/voCode_demo_second"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="VO Code"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"></TextView>

            <TextView
                android:id="@+id/memNumber_demo_second"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Mem No"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"></TextView>

            <TextView
                android:id="@+id/memName_demo_second"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:text="Member Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"></TextView>

            <TextView
                android:id="@+id/mobNumber_demo_second"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Memb Mobile No"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"></TextView>

            <TextView
                android:id="@+id/save_balance_demo_second"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Saving Balance"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"></TextView>

            <TextView
                android:id="@+id/withDraw_demo_second"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Withdraw\nProposal"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"></TextView>

            <TextView
                android:id="@+id/bKahNumber_demo_second"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="bKash Wallet Number"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"></TextView>

        </LinearLayout>

    </HorizontalScrollView>


</androidx.cardview.widget.CardView>